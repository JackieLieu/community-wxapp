/**index.wxss**/

.close {
  position: relative;
  padding: 10px 0 10px 10px;
  font-size: 15px;
  text-align: center;
  color: #d73f3d;
  background-color: rgba(255, 0, 0, .15)
}
.close::after {
  content: '';
  position: absolute;
  left: 0;
  width: 5px;
  height: 20px;
  background-color: #d73f3d;
}
.close text, .close navigator {
  float: left;
  margin: 0 5px;
}
.close button {
  float: left;
  width: 40px;
  padding: 0;
  font-size:15px;
  color: #d73f3d;
  line-height: 20px;
  background-color: transparent;
}

/* 用户信息 */
.user-info {
  min-height: 150px;
  margin-top: 75px;
}
.user-all {
  height: auto;
  padding-bottom: 10px;
}
.user-all-info {
  margin-top: 5px;
}
.user-all-info > view {
  width: 100%;
  padding: 10px;
  font-size: 15px;
  border-top: 1px solid #eee;
  box-sizing: border-box;
}
.user-all-info > view :nth-child(1) {
  display: inline-block;
  color: #888;
  width: 20%;
}
