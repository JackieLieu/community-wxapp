/* pages/signUp/signUp.wxss */
page {
  background-color: #4a6efd;
  perspective: 800;
}
input {
  margin-top: 10px;
  padding: 0 10px;
  font-size: 17px;
  color: #666;
  border: 1px solid #ccc;
  border-radius: 10px;
}
.box {
  overflow: hidden;
  padding: 10px;
  max-height: 350px;
  transition: 1s;
}
.ok {
  max-height: 25px;
  color: white;
  background-image: linear-gradient(90deg, #a7df00, #99CC00, #749b01);
  box-shadow: 5px 5px 3px rgba(0, 0, 0, .4);
  text-shadow: 1px 1px 3px rgba(0, 0, 0, .4);
  animation: 1s okAni;
}
@keyframes okAni {
  to { transform: rotateX(360deg) }
}
.ok .tag::before {
  background-image: linear-gradient(90deg, #4a6efd, #99CC00);
  box-shadow: 1px 0 5px rgba(0, 0, 0, .3);
}

radio-group {
  overflow: auto;
  padding: 10px;
}
radio-group > label {
  display: block;
  margin: 10px 0;
  font-size: 15px;
  color: #666;
}

.tag::before {
  content: '';
  position: absolute;
  width: 15px;
  height: 20px;
  margin-top: 5px;
  margin-left: -20px;
  background-color: #4a6efd;
  box-shadow: 2px 0 10px rgba(0, 0, 0, .4);
}

.submit {
  margin: 40px auto;
  width: calc(90vw + 20px);
}
.error {
  padding: 0 10px;
  margin-left: 10px;
  font-size: 15px;
  color: #d73f3d;
  background-color: #FFB2B2;
  border-radius: 5px;
}
