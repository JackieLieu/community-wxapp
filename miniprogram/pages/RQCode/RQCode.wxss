/* pages/RQCode/RQCode.wxss */
swiper {
  height: 100vh;
  background-color: #f3f3f3;
}
swiper-item > view {
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  overflow: auto;
  width: 80vw;
  height: 80vh;
  margin: 10vh 10vw;
  background-image: linear-gradient(19deg, #21D4FD, #B721FF);
  border-radius: 10px;
  box-shadow: 0 0 20px #777,
  0 0 5px rgba(255, 255, 255, .8) inset;
}
swiper-item:nth-child(2) > view {
  background-image: linear-gradient(19deg, #21D4FD, #2AF598);
}
swiper-item:nth-child(3) > view {
  background-image: linear-gradient(19deg, #F7CE68, #FBAB7E);
}
swiper-item:nth-child(4) > view {
  background-image: linear-gradient(19deg, #FEE140, #FA709A);
}
swiper-item:nth-child(5) > view {
  background-image: linear-gradient(19deg, #8EC5FC, #E0C3FC);
}
swiper-item > view > canvas {
  position: relative;
  display: block;
  margin: 0 auto;
}
swiper-item > view .tag {
  display: block;
  width: 100%;
  padding-top: 20px;
  font-size: 25px;
  color: rgba(255, 255, 255, .6);
  font-weight: bold;
  text-align: center;
}
swiper-item > view text:last-child {
  display: block;
  width: 100%;
  text-indent: 2em;
  color: #888;
  text-shadow: 1px 1px 1px rgba(255, 255, 255, .5);
  font-size: 12px;
}